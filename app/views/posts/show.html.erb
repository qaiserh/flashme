<h1><%=current_user.first_name%> <%=current_user.last_name%>'s History</h1>
<div class="container">
	<table>
		<tr>
			<td>Blog Name</td>
			<td>Post URL</td>
			<td>Date</td>
		</tr>
		<% @posts.each do |post| %>
		<tr>
			<td> <a href=<%="//" + post.blog_name + ".tumblr.com"%>><%=post.blog_name%></a> </td>
			<td> <a href=<%="//" + post.post_url %>><%=post.post_url%></a> </td>
			<td> <%=post.date %> </td>
		</tr>
		<% end %>
	</table>
</div>